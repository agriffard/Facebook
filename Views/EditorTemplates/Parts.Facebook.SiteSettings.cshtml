@model Facebook.Models.FacebookSettingsPartRecord
@using Orchard.Utility.Extensions;
@using Facebook.Models;

<fieldset>
    <legend>@T("Facebook")</legend>
    <div>
        <label for="@Html.FieldIdFor(m => m.AppId)">@T("Api key")</label>
        @Html.TextBoxFor(m => m.AppId, new { @class = "textMedium" })
        @Html.ValidationMessage("AppId", "*")
		@if(!String.IsNullOrEmpty(Model.AppId)){ 
			@Html.Link(T("Check key").Text, Url.Action("CheckApp", "Admin", new { area = "Facebook", returnUrl = Request.ToUrlString() }))
		}
		<span class="hint">@T("API key for <a href=\"http://Facebook.com/register.php\">Facebook</a> API.")</span>
    </div>
</fieldset>