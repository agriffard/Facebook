@model Facebook.Models.FacebookSettingsPart
@using Orchard.Utility.Extensions;
@using Facebook.Models;
@{ Layout.Title = T("Facebook Settings").ToString(); }
<fieldset>
    <legend>@T("Facebook")</legend>
    <div>
        <label for="@Html.FieldIdFor(m => m.AppId)">@T("App Id")</label>
        @Html.TextBoxFor(m => m.AppId, new { @class = "text medium" })
        @Html.ValidationMessage("AppId", "*")
        @*@if(!String.IsNullOrEmpty(Model.AppId)){
                @Html.Link(T("Check key").Text, Url.Action("CheckApp", "Admin", new { area = "Facebook", returnUrl = Request.ToUrlString() }))
            }*@
        <span class="hint">@T("App Id on the <a href=\"https://developers.facebook.com/apps\">Facebook Developers site</a>.")</span>
    </div>
    <div>
        @Html.LabelFor(model => model.AppSecret, T("App Secret"))
        @Html.TextBoxFor(model => model.AppSecret, new { @class = "text medium" })
        @Html.ValidationMessage("AppSecret", "*")
    </div>
</fieldset>